@model IEnumerable<website.Models.LineUp>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.User)</th>
        <th>@Html.DisplayNameFor(model => model.Contests)</th>
        <th><span>Contest Type</span></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(model => item.User.UserName)</td>
        <td>
            @foreach (var s in item.Contests)
            {
                <div>@Html.DisplayFor(model => s.Name)</div>
            }
        </td>
        <td>
            @foreach (var s in item.Contests)
            {
                <div>@Html.DisplayFor(model => s.ContestType.Type)</div>
            }
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
