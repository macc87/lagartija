@model website.Models.MLBPlayerViewModel

@{
    ViewBag.Title = "PlayerDetails";
}

<h2>@Html.DisplayFor(model => model.Player.Name)</h2>

<div>
    <h4>Player Information</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Photo
        </dt>

        <dd>
            <img src=@Url.Content(Model.PhotoPath) width="100" height="100" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Team)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Team.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Position)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Position.PositionName)
        </dd>
    </dl>
    <hr />
    <h3> News </h3>
    <dl class="dl-horizontal">
        @foreach (var item in @ViewBag.News)
        {
            <dt>
                @item.NewsTitle
            </dt>
            <dd>
                @item.NewsContent
            </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Back to Lobby", "Lobby")
</p>
