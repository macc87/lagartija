@model website.Models.TeamViewModel

@{
    ViewBag.Title = "Team Details";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<div>
    <hr />
    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.Logo)
        </dt>

        <dd>
            <img src=@Url.Content(Model.LogoPath) width="100" height="100" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sport)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sport.SportName)
        </dd>
    </dl>
    <hr />
    <h3> Oficcial Line UP </h3>
    <table width="100%">
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Photo</th>
            <th>Salary</th>
        </tr>
        @foreach (var item in @ViewBag.Players)
        {
            <tr>
                <td>@Html.ActionLink((string)item.Player.Name, "PlayerDetails", new { id = item.Id })</td>
                <td>@item.Position.PositionName</td>
                <td><img src=@Url.Content(string.Format("~/Content/Media/Images/{0}", item.Player.Photo)) width="50" height="50"/></td>
                <td>$ @item.Player.Salary</td>
            </tr>
        }
    </table>
    <h3> News </h3>
    <dl class="dl-horizontal">
        @foreach (var item in @ViewBag.News)
        {
            <dt>
                @item.NewsTitle
            </dt>
            <dd>
                @item.NewsContent
            </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Back to Lobby", "Lobby")
</p>
