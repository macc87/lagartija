@model website.Models.ContestViewModel

@{
    ViewBag.Title = "ContestDetails";
}

<h2>ContestDetails</h2>

<div>
    <h4>Contest</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ContestType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContestType.Type)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SignedUp)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SignedUp)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MaxCapacity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaxCapacity)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EntryFee)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EntryFee)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cap)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cap)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Games)
        </dt>
        <dd>
            @foreach (var item in Model.Games)
            {
                if (item.Checked)
                {
                    <div>@item.Name</div>
                }
            }
        </dd>

    </dl>
</div>
<p>
