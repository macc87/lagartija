@using Fantasy.API.Host.Models
@model LoginModel
@{
    ViewBag.Title = "Log in";
    Layout = "../Shared/_Layout.cshtml";
}
<div class="container">
    <div class="home-login">
        <section id="loginForm">
            @using (Html.BeginRouteForm("PostLoginRoute", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="page-header">
                    <h2>Use Admin account to login in API</h2>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <label>User Name</label>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <label>Password</label>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12">
                        <button type="submit" class="btn btn-primary" id="loginButton"><i class="fa fa-sign-in"></i> Sign In</button>
                    </div>
                </div>
            }
        </section>
    </div>
</div>